<% provide(:title, "パスワード再設定") %>
<h1>パスワードを再設定します</h1>

<%= form_for(:password_reset, url: password_resets_path) do |f| %>
  <div class="password_resets_form">
    <div class="password_resets-item mdl-cell mdl-cell--2-col">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :email, 'メールアドレス', class: 'mdl-textfield__label' %>
        <%= f.email_field :email, class: 'mdl-textfield__input' %>
      </div>
    </div>

    <%= f.submit "次に進む", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" %>
  </div>
<% end %>