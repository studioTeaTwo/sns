<% provide(:title, "パスワード再設定") %>
<h1>パスワードを再設定します</h1>

<%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
  <div class="password_resets_form">
    <%= render 'shared/error_messages', object: f.object %>

    <%= hidden_field_tag :email, @user.email %>

    <div class="password_resets-item mdl-cell mdl-cell--2-col">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :password, '新パスワード', class: 'mdl-textfield__label' %>
        <%= f.email_field :password, class: 'mdl-textfield__input' %>
      </div>
    </div>

    <div class="password_resets-item mdl-cell mdl-cell--2-col">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :password_confirmation, '確認', class: 'mdl-textfield__label' %>
        <%= f.email_field :password_confirmation, class: 'mdl-textfield__input' %>
      </div>
    </div>

    <%= f.submit "更新する", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" %>
  </div>
<% end %>