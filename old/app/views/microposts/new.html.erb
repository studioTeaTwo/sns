<%= form_for(@micropost, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="micropost-textarea mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :content, '文章を入力してください', class: 'mdl-textfield__label' %>
    <%= f.text_area :content, class: 'mdl-textfield__input' %>
  </div>
  <div class="micropost-button">
    <%= f.submit "投稿する", data: { disable_with: '投稿中...' }, class: "micropost-button-item mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" %>
  </div>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('画像ファイルは最大5MBです。もう少し小さくしてください。');
    }
  });
</script>