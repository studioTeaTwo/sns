<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'users/user_info', user: @user %>
      <span><%= link_to "プロフィールを見る", @user %></span>
      <span><%= pluralize(@user.microposts.count, "投稿") %></span>
    </section>
    <section class="micropost_form">
      <%= render 'microposts/micropost_form', micropost: @micropost %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>タイムライン</h3>
    <%= render 'microposts/feed', feed_items: @feed_items %>
  </div>
</div>