<% IgesHelper::ALLERGEN_SORT.collect do |k, v| %>
  <span class="search-allergen mdl-chip mdl-chip--contact mdl-chip--deletable">
    <% if Rails.application.assets.find_asset("#{k}") %>
      <%= image_tag "#{k}.png", alt: "#{k}", size: "32x32", class: "mdl-chip__contact" %>
      <span class="mdl-chip__text"><%= v %></span>
      <%= link_to search_result_by_allergen_path(:search_key => k), class: "mdl-chip__action" %>
    <% else %>
      <p><%= link_to "#{v}の絵に差し替える", search_result_by_allergen_path(:search_key => k) %></p>
    <% end %>
  </span>
<% end %>

<table class="users">
  <tbody>
　　　<%= render users %>
  </tbody>
</table>