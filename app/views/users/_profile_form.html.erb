<%= form_for(user, url: yield(:url)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-summary mdl-cell mdl-cell--2-col">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :name, '名前', class: 'mdl-textfield__label' %>
      <%= f.text_field :name, class: 'mdl-textfield__input' %>
    </div>
  </div>

  <div class="form-summary mdl-cell mdl-cell--2-col">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :email, 'メールアドレス', class: 'mdl-textfield__label' %>
      <%= f.email_field :email, class: 'mdl-textfield__input' %>
    </div>
  </div>

  <div class="form-summary mdl-cell mdl-cell--2-col">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :password, 'パスワード', class: 'mdl-textfield__label' %>
      <%= f.password_field :password, class: 'mdl-textfield__input' %>
    </div>
  </div>

  <div class="form-summary mdl-cell mdl-cell--2-col">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :password_confirmation, 'パスワードの確認', class: 'mdl-textfield__label' %>
      <%= f.password_field :password_confirmation, class: 'mdl-textfield__input' %>
    </div>
  </div>

  <div class="form-summary mdl-cell mdl-cell--4-col">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <% unless current_page?(signup_path) %>
        <%= f.label :self_introduction, '自己紹介', class: 'mdl-textfield__label' %>
        <%= f.text_area :self_introduction, class: 'mdl-textfield__input' %>
      <% end %>
    </div>
  </div>

  <%= f.submit yield(:button_text), data: { disable_with: '登録中...' }, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" %>
<% end %>