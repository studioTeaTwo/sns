<%= form_for(@user, url: yield(:url)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, '名前' %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email, 'メールアドレス' %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, 'パスワードの確認' %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <% unless current_page?(signup_path) %>
    <%= f.label :self_introduction, '自己紹介' %>
    <%= f.text_area :self_introduction, class: 'form-control' %>
  <% end %>

  <%= f.submit yield(:button_text), data: { disable_with: '登録中...' }, class: "btn btn-primary" %>
<% end %>